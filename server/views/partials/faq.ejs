<!--FAQ-->
<section ng-controller="FaqCtrl">
  <h1 class="text-center">FAQ</h1>
  <div class="row">
    <div ng-repeat="panel in panels">
      <div class="small-12 medium-6 large-4 column">
        <div class="panel-title" toggle-sibling>
          <h4>{{panel.question}}</h4>
        </div>
        <div class="panel">
          {{panel.answer}}
        </div>
      </div>
      <div ng-if="($index+1)%2 === 0" class="clearfix show-for-medium-only"></div>
      <div ng-if="($index+1)%3 === 0" class="clearfix show-for-large-only">
      </div>
    </div>
  </div>
</section>
