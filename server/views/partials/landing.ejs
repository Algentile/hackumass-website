<!--Landing-->
<section class="landing text-center" ng-controller="LandingCtrl">

<!-- MLH Sanctioning Badge -->
<a id="mlh-trust-badge" style="position:fixed;top:0;right:50px;max-width:100px;width:10%;min-width: 60px;display:block;z-index:10000" href="https://mlh.io/?utm_campaign=Trust%20Badge" target="_blank"><img src="https://s3.amazonaws.com/logged-assets/trust-badge/f2015.png" alt="MLH Official - Fall 2015" style="width:100%;"></a>

  <!--Logo-->
  <div class="row">
    <object class="logo small-centered column" data="/assets/img/logo.svg" type="image/svg+xml">
      <img src="assets/img/logo.png" alt="HackUMass Logo" />
    </object>
  </div>

  <!--Date-->
  <div class="row text-center">
    <h3>{{date}}</h3>
  </div>

  <!--Countdown-->
  <div class="row text-center countdown"></div>

  <!--Attend and Sponsor-->
  <div class="row">
    <a href="#" class="unstyled-link" target="_blank">
      <button class="transparent-btn wipe-btn">Register</button>
    </a>
    <a id="sponsor-anchor" href="#sponsor" class="unstyled-link" data-scroll>
      <button class="transparent-btn wipe-btn">Sponsor</button>
    </a>
  </div>

  <!-- Helpful Links -->
  <div class="row text-center">
    <div class="small-12 column">
      <h6>Helpful Links</h6>
      <a href="http://hackumass-ii.challengepost.com/">HackUMass II ChallengePost</a><br>
      <a href="http://static.mlh.io/docs/mlh-code-of-conduct.pdf">MLH Code of Conduct</a>
    </div>
  </div>

  <!-- Social Media -->
  <div class="row social-media">
    <div class="small-12 column">
      <a class="unstyled-link" href="https://www.facebook.com/hackUMass" target="_blank">
        <span class="fa fa-facebook"></span>
      </a>
      <a class="unstyled-link" href="https://twitter.com/hackumass" target="_blank">
        <span class="fa fa-twitter"></span>
      </a>
    </div>
  </div>

</section>
