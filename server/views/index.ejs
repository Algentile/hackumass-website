<!DOCTYPE html>
<html>
  <% include includes/head.ejs %>
  <body>
    <!--Landing-->
    <section class="text-center">
      <!--Logo-->
      <div class="row">
        <img class="logo small-centered column" src="/assets/img/logo.svg" alt="HackUMass Logo">
      </div>

      <!--Countdown-->
      <div class="row">

      </div>

      <!--Headline-->
      <div class="row headline">
        <div class="small-4 column">
          <span class="fa fa-users"></span>
          <h3>500 Hackers</h3>
        </div>
        <div class="small-4 column">
          <span class="fa fa-clock-o"></span>
          <h3>36 Hours</h3>
        </div>
        <div class="small-4 column">
          <span class="fa fa-university"></span>
          <h3>1 Venue</h3>
        </div>
      </div>

      <!--Email-->
      <div class="row">
        <h4>Sign up for updates</h4>
        <form>
          <div class="row">
            <div class="small-6 small-centered column">
              <input type="text" placeholder="Email Address">
            </div>
          </div>
          <button class="btn btn-1 btn-1f" type="submit">Submit</button>
        </form>
      </div>
    </section>

    <!--About-->
    <section class="alternate text-center">
      <h1 class="text-center">About</h1>
    </section>

    <!--FAQ-->
    <section>
      <h1 class="text-center">FAQ</h1>
    </section>

    <!--Sponsors-->
    <section class="alternate text-center">
      <h1>Sponsors</h1>
      <p>Coming Soon!</p>
    </section>
    <footer class="text-center">
      <div class="social-media">
        <a href="https://www.facebook.com/hackUMass" target="_blank">
          <span class="fa fa-facebook"></span>
        </a>
        <a href="https://twitter.com/hackumass" target="_blank">
          <span class="fa fa-twitter"></span>
        </a>
      </div>
      <p>
        Made by the HackUMass team with <span class="fa fa-heart"></span> and <span class="fa fa-coffee"></span>.
      </p>
    </footer>
    <% include includes/foot.ejs %>
  </body>
</html>
